# ==============================
# üîê JWT CONFIGURATION
# ==============================

# Secret key for signing JWT tokens
SECRET_KEY=your_secret_key_here

# Encryption algorithm
ALGORITHM=HS256

# Access token lifetime (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email verification token lifetime (in minutes)
VERIFY_TOKEN_EXPIRE_MINUTES=30

# Refresh token lifetime (in hours)
REFRESH_TOKEN_EXPIRE_HOURS=24

# Password reset token lifetime (in hours)
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1


# ==============================
# üìß EMAIL (SMTP) SETTINGS
# ==============================

# SMTP server host
EMAIL_HOST=smtp.gmail.com

# SMTP port
EMAIL_PORT=587

# Sender email address
EMAIL_HOST_USER=example@gmail.com

# Application-specific password for Gmail (do not use personal password)
EMAIL_HOST_PASSWORD=your_app_password_here

# Enable TLS encryption
EMAIL_USE_TLS=True


# ==============================
# üåê FRONTEND CONFIGURATION
# ==============================

# Base URL of the frontend application (for email verification links)
FRONTEND_URL=http://127.0.0.1:8000


# ==============================
# üß† REDIS & CELERY SETTINGS
# ==============================

# Redis URL (used as broker and result backend for Celery)
REDIS_URL=redis://localhost:6379/0

# Interval in seconds for automatic cleanup of expired tokens
TOKEN_CLEANUP_INTERVAL=3600
